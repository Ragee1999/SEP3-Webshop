@page "/payment-error"
@inject NavigationManager NavigationManager

<h3 class="text-danger text-center mt-5">Payment Failed or Cancelled</h3>
<p class="text-center mb-4">
    Something went wrong with your payment, or you canceled the process.
</p>

<div class="text-center">
    <button class="btn btn-primary btn-lg" @onclick="NavigateToCart">Return to Cart</button>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    h3 {
        font-size: 28px;
        font-weight: bold;
    }
    p {
        font-size: 18px;
        color: #6c757d;
    }
    button {
        margin-top: 20px;
        padding: 10px 25px;
        font-size: 18px;
        border-radius: 8px;
        background-color: #007bff;
        color: white;
        border: none;
        transition: transform 0.2s ease-in-out;
    }
    button:hover {
        transform: scale(1.05);
        background-color: #0056b3;
    }
</style>

@code {
    private void NavigateToCart()
    {
        NavigationManager.NavigateTo("/Cart");
    }
}