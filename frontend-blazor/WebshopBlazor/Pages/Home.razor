@page "/"
@using WebshopBlazor.Models

<PageTitle>EleC</PageTitle>
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">

<style>
    
    body {
        font-family: 'Lato', sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Lato', sans-serif;
        font-weight: 700; 
        color: #007bff; 
    }

    p, .card-text, .about-us-section p {
        font-family: 'Lato', sans-serif;
        font-weight: 300; 
        line-height: 1.6;
        font-size: 1.1rem;
        color: #555;
    }

    .btn {
        font-family: 'Lato', sans-serif;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn:hover {
        background-color: #0056b3;
    }

    /* Retain Existing Styles */
    .video-banner {
        position: relative;
        height: 100vh;
        overflow: hidden;
    }

    .video-banner video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        text-align: center;
        z-index: 1;
    }

    .banner-content h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .banner-content a {
        font-size: 1.2rem;
        padding: 10px 20px;
        background-color: rgba(255, 255, 255, 0.8);
        color: #333;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease-in-out;
    }

    .banner-content a:hover {
        background-color: rgba(255, 255, 255, 1);
    }

    .banner-content h1 {
        background: linear-gradient(100deg, #54bab1, #feb47b); 
        -webkit-background-clip: text; 
        -webkit-text-fill-color: transparent; 
        text-shadow: none; 
    }


    /* Featured Products Section Styling */
    #featured-products {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .card {
        border-radius: 8px;
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
    }

    .card-footer a {
        font-size: 0.9rem;
        padding: 10px 20px;
        border-radius: 50px;
        background-color: #007bff;
        color: white;
        transition: background-color 0.3s ease-in-out;
        text-decoration: none;
    }

    .card-footer a:hover {
        background-color: #0056b3;
    }

    /* About Us Section Styling */
    .about-us-section {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        padding: 20px;
        margin-top: 40px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .about-us-section h3 {
        color: #007bff;
        font-size: 1.8rem;
        margin-bottom: 10px;
    }

    .about-us-section img {
        border: 2px solid #ddd;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Contact Us Section */
    .text-center h3 {
        color: #dc3545;
        font-size: 1.8rem;
        font-weight: bold;
    }

    .text-center p {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .btn-danger {
        border-radius: 50px;
        padding: 15px 30px;
        transition: background-color 0.3s, transform 0.2s;
        text-decoration: none;
        font-size: 1.2rem;
    }

    .btn-danger:hover {
        background-color: #b32025;
        transform: scale(1.05);
    }
</style>

