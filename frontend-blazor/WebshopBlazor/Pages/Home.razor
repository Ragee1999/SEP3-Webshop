@page "/"
@using WebshopBlazor.Models

<PageTitle>Alperen's Kiosk</PageTitle>

@{
// Dummy Products Data
var products = new List<Product>
{
new Product
{
Name = "Product 1",
Description = "A brief description of Product 1.",
Price = 29.99m,
ImageUrl = "https://images.samsung.com/is/image/samsung/assets/global/mkt/smartphones/galaxy-s24/gallery/galaxy-s24plus/S24Plus-Color-Sapphire_Blue_MO.jpg"
},
new Product
{
Name = "Product 2",
Description = "A brief description of Product 2.",
Price = 19.99m,
ImageUrl = "https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Sucuk-1.jpg/640px-Sucuk-1.jpg"
},
new Product
{
Name = "Product 3",
Description = "A brief description of Product 3.",
Price = 39.99m,
ImageUrl = "https://s3.eu-north-1.amazonaws.com/assets.boosted.dk/2022/09/22112422/Audi-RS8-1a-1536x832.jpeg"
}
};

//  About Us Data
var aboutUs = new AboutUs
{
Title = "About Us",
Description = "Welcome to Alperen's Kiosk, where we offer a variety of quality products at the best prices. Our mission is to bring convenience and value to your shopping experience. Explore our wide range of products and make your day better!",
ImageUrl = "https://megansmoving.com/wp-content/uploads/2016/11/fragile-contents-inside-picture-id886423850.jpg"
};
}

<!-- Large Product Banner Section -->
<section class="product-banner position-relative">
    <img src="https://images.pexels.com/photos/356056/pexels-photo-356056.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" class="img-fluid w-100" alt="Product Banner" />
    <div class="banner-content position-absolute top-50 start-50 translate-middle text-center text-white">
        <a href="#featured-products" class="btn btn-light btn-lg">Show More</a>
    </div>
</section>

<!-- Main Content Section -->
<div class="container my-5">

    <!-- Featured Products Section -->
    <section id="featured-products" class="row mb-5">
        <div class="col-md-12 text-center mb-4 text-center text-primary mb-4">
            <h2>Featured Products</h2>
            <p class="text-muted">Check out our top picks!</p>
        </div>

        @foreach (var product in products)
        {
        <div class="col-md-4">
            <div class="card shadow-sm border-light">
                <img src="@product.ImageUrl" class="card-img-top img-fluid" style="height: 250px" alt="Product Image" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <h6 class="text-success">$@product.Price.ToString("C")</h6>
                </div>
                <div class="card-footer text-center">
                    <a href="/products" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
        }
    </section>

    <!-- About Us Section -->
    <section class="row">
        <div class="col-md-6">
            <h3 class="text-center mb-3">@aboutUs.Title</h3>
            <p class="text-muted">@aboutUs.Description</p>
        </div>
        <div class="col-md-6 text-center">
            <img src="@aboutUs.ImageUrl" alt="Kiosk Image" class="img-fluid rounded">
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="text-center mt-5">
        <h3>Don't Miss Out!</h3>
        <p>Get exclusive deals and offers by joining our newsletter.</p>
        <a href="/contact" class="btn btn-danger btn-lg">Contact Us</a>
    </section>
</div>

