<!-- Background Video Banner -->
<div class="video-banner">
    <video autoplay muted loop>
        <source src="https://cdn.pixabay.com/video/2023/06/30/169445-841382824_large.mp4" type="video/mp4" />
        <!-- Fallback Text -->
        Your browser does not support the video tag.
    </video>
    <div class="banner-content">
        <h1>Welcome to EleC, Denmark's Leading Electronics Store </h1>
        <a href="#featured-products">Shop Now</a>
    </div>
</div>

<!-- Main Content Section -->
<div class="container my-5">

    <!-- Featured Products Section -->
    <section id="featured-products" class="row mb-5">
        <div class="col-md-12 text-center mb-4">
            <h2 class="text-primary">Featured Products</h2>
            <p class="text-muted">Check out our top picks!</p>
        </div>

        @foreach (var product in products)
        {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-light">
                <img src="@product.ImageUrl" class="card-img-top img-fluid" style="height: 250px" alt="Product Image" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <h6 class="text-success">@product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("da-DK"))</h6>
                </div>
                <div class="card-footer text-center">
                    <a href="/products" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
        }
    </section>

    <!-- About Us Section -->
    <section class="about-us-section">
        <div class="col-md-6">
            <h3>@aboutUs.Title</h3>
            <p>@aboutUs.Description</p>
        </div>
        <div class="col-md-6 text-center">
            <img src="@aboutUs.ImageUrl" alt="Kiosk Image" class="img-fluid rounded">
        </div>
    </section>

    <!-- Contact Us Section -->
    <section class="text-center mt-5">
        <h3>Do You Want to Trade Your Electronics?</h3>
        <p>Have any questions? Contact us to learn more about how you can trade your electronics for great deals!</p>
        <a href="/contact" class="btn btn-danger">Contact Us</a>
    </section>
</div>
